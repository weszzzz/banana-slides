# AI Provider 格式配置
# "gemini" (默认): 使用 Google GenAI SDK
# "openai": 使用 OpenAI SDK 格式
AI_PROVIDER_FORMAT=gemini

# Gemini 格式配置（当 AI_PROVIDER_FORMAT=gemini 时使用）
GOOGLE_API_KEY=your-api-key-here
# 代理示例: https://aihubmix.com/gemini
GOOGLE_API_BASE=https://generativelanguage.googleapis.com
# GenAI (Gemini) 超时时间（秒），默认300秒
GENAI_TIMEOUT=300.0
# GenAI (Gemini) 最大重试次数（应用层实现），默认2次
GENAI_MAX_RETRIES=2

# OpenAI 格式配置（当 AI_PROVIDER_FORMAT=openai 时使用）
OPENAI_API_KEY=your-api-key-here
# 代理示例: https://aihubmix.com/v1
OPENAI_API_BASE=https://api.openai.com/v1
# 超时时间（秒），默认300秒
OPENAI_TIMEOUT=300.0
# 最多重试次数，减少重试避免累积超时，默认2次
OPENAI_MAX_RETRIES=2

# === 分离的供应商配置（可选，会覆盖上面的统一配置） ===
# 如果设置了以下变量，文字和图片可以使用不同的供应商

# 文字供应商配置
# TEXT_PROVIDER_FORMAT=gemini  # 或 "openai"
# TEXT_GEMINI_API_KEY=your-text-gemini-api-key
# TEXT_GEMINI_API_BASE=https://your-gemini-provider.com/gemini
# TEXT_OPENAI_API_KEY=your-text-openai-api-key
# TEXT_OPENAI_API_BASE=https://your-openai-provider.com/v1

# 图片供应商配置
# IMAGE_PROVIDER_FORMAT=gemini  # 或 "openai"
# IMAGE_GEMINI_API_KEY=your-image-gemini-api-key
# IMAGE_GEMINI_API_BASE=https://your-gemini-provider.com/gemini
# IMAGE_OPENAI_API_KEY=your-image-openai-api-key
# IMAGE_OPENAI_API_BASE=https://your-openai-provider.com/v1

# === 分离配置示例 ===
# 示例1: 文字用OpenAI，图片用Gemini
# TEXT_PROVIDER_FORMAT=openai
# TEXT_OPENAI_API_KEY=your-openai-key
# TEXT_OPENAI_API_BASE=https://yourapi.cn/v1
# IMAGE_PROVIDER_FORMAT=gemini
# IMAGE_GEMINI_API_KEY=your-gemini-key
# IMAGE_GEMINI_API_BASE=https://yourapi.cn/gemini

# AI 模型配置
TEXT_MODEL=gemini-3-flash-preview
IMAGE_MODEL=gemini-3-pro-image-preview

# Flask 配置
LOG_LEVEL=INFO
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-this-in-production
PORT=5000

# CORS 配置（多个地址用逗号分隔）
CORS_ORIGINS=*

# 并发配置
MAX_DESCRIPTION_WORKERS=5
MAX_IMAGE_WORKERS=8

